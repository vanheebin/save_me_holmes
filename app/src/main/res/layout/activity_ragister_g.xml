<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ragister_G">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/go_back"
                android:layout_width="58px"
                android:layout_height="58px"
                android:layout_marginStart="58px"
                android:layout_marginLeft="58px"
                android:layout_marginTop="140px"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="130px"
                android:layout_marginEnd="58px"
                android:layout_marginRight="58px"
                android:text="완료"
                android:textColor="#000000"
                android:textSize="45px"
                android:textStyle="bold"
                app:backgroundTint="#FFFFFF" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="128px"
                android:text="등록하기"
                android:textColor="#000000"
                android:textSize="50px" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="324px"
        android:background="#F7F7F7"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="58px"
                android:layout_marginLeft="58px"
                android:layout_marginTop="147px"
                android:layout_marginEnd="58px"
                android:layout_marginRight="58px"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="000-0000-0000"
                android:textSize="50px" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58px"
                android:layout_marginLeft="58px"
                android:layout_marginTop="65px"
                android:text="보호자 등록"
                android:textColor="#000000"
                android:textSize="55px" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1976px"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="1324px"
            android:layout_height="220px"
            android:layout_marginStart="58px"
            android:layout_marginLeft="58px"
            android:layout_marginTop="124px"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보호자 이름"
                    android:textColor="#000000"
                    android:textSize="55px" />

                <EditText
                    android:id="@+id/edt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="72px"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="textPersonName"
                    android:text="홍길동"
                    android:textSize="50px" />
            </FrameLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="1324px"
            android:layout_height="220px"
            android:layout_marginStart="58px"
            android:layout_marginLeft="58px"
            android:layout_marginTop="86px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관계"
                android:textColor="#000000"
                android:textSize="55px" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="55px"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배우자"
                    android:textSize="50px" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="형제/자매"
                    android:textSize="50px" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="부모님"
                    android:textSize="50px" />

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/phone_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#503FD5"
            android:text="주소록 찾기"
            app:backgroundTint="#503FD5" />
    </LinearLayout>



</LinearLayout>